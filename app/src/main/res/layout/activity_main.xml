<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/sensor_num"
        android:textColor="@color/black"
        android:textSize="60sp" />

    <EditText
        android:id="@+id/empToRetrieve"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:ems="15"
        android:fontFamily="sans-serif-black"
        android:textSize="30sp"
        android:hint="499999"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/retrieveData"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="sans-serif-black"
        android:onClick="retrieveData"
        android:text="@string/retrieve_button"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/employeeData"
        android:layout_width="800dp"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        android:ems="12"
        android:fontFamily="sans-serif"
        android:text="[ Employee Data Displayed Here ]"
        android:textColor="@color/black"
        android:textSize="30sp" />

</LinearLayout>